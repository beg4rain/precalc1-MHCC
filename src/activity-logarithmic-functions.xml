                        <static>15</static>
                    </var>
                    <var name="$c[2]">
                        <static>18</static>
                    </var>
                    <var name="$c[3]">
                        <static>0.7</static>
                    </var>
                    <var name="$b[1]">
                        <static>5</static>
                    </var>
                    <var name="$b[2]">
                        <static>2</static>
                    </var>
                    <var name="$b[3]">
                        <static>2</static>
                    </var>
